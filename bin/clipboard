#!/bin/bash

function usage () {
    echo "Usage: $0 <copy/paste/tee>"
    echo ""
    echo "tee will both copy to clipboard and print the result"
    exit 1
}

function noclip () {
    echo "No clipboard function found"
    echo "On linux, try installing xclip."
    exit 2
}

function use_osc52 () {
    # Only use osc52 over SSH.
    if [ -n "$TMUX" ]; then
        # Check tmux's client environment, which is properly updated when
        # reconnecting, rather than the shell's, which is based on the state
        # when the window was created.
        [[ "$(tmux show-environment SSH_CONNECTION)" == SSH_CONNECTION=* ]]
    else
        [[ -n "$SSH_CONNECTION" ]]
    fi
}

function copy () {
    if use_osc52; then
        encoded=$(base64 <&0)
        printf "\033]52;c;%s\a" "$encoded" > /dev/tty
    elif type pbcopy &> /dev/null; then
        pbcopy <&0
    elif type xclip &> /dev/null; then
        xclip -sel clip -i <&0
    else
        noclip
    fi
}

function paste () {
    if type pbpaste &> /dev/null; then
        pbpaste
    elif type xclip &> /dev/null; then
        xclip -sel clip -o
    else
        noclip
    fi
}


if [ "$1" == "copy" ]; then
    copy
elif [ "$1" == "paste" ]; then
    paste
elif [ "$1" == "tee" ]; then
    copy
    paste
else
    usage
fi
